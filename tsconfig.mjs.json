{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "outDir": "./esm",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "axios": ["./node_modules/axios"]
    }
  },
  "include": ["./src/*.ts"],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended",
  "extends": "@tsconfig/recommended/tsconfig.json"
}
